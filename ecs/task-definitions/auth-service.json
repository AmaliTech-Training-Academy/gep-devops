

[
  {
    "name": "auth-service",
    "image": "${image_url}:${image_tag}",
    "cpu": 0,
    "portMappings": [
      {
        "name": "auth-service",
        "containerPort": 8081,
        "hostPort": 8081,
        "protocol": "tcp",
        "appProtocol": "http"
      }
    ],
    "essential": true,
    "environment": [
      {"name": "SPRING_PROFILES_ACTIVE", "value": "${environment}"},
      {"name": "SERVER_PORT", "value": "8081"},
      {"name": "AWS_REGION", "value": "${aws_region}"},
      {"name": "SERVICE_DISCOVERY_NAMESPACE", "value": "${service_discovery_namespace}"},
      {"name": "REDIS_HOST", "value": "${redis_endpoint}"},
      {"name": "REDIS_PORT", "value": "6379"},
      {"name": "DOCDB_HOST", "value": "${docdb_endpoint}"},
      {"name": "DOCDB_PORT", "value": "27017"}
    ],
    "secrets": [
      {"name": "DB_HOST", "valueFrom": "${db_host_secret_arn}:host::"},
      {"name": "DB_PORT", "valueFrom": "${db_host_secret_arn}:port::"},
      {"name": "DB_NAME", "valueFrom": "${db_host_secret_arn}:dbname::"},
      {"name": "DB_USERNAME", "valueFrom": "${db_username_secret_arn}:username::"},
      {"name": "DB_PASSWORD", "valueFrom": "${db_password_secret_arn}:password::"}
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "healthCheck": {
      "command": ["CMD-SHELL", "curl -f http://localhost:8081/actuator/health || exit 1"],
      "interval": 30,
      "timeout": 5,
      "retries": 3,
      "startPeriod": 60
    }
  }
]
