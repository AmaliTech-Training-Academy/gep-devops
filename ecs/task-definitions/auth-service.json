{
  "family": "event-planner-dev-auth-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/event-planner-dev-ecs-execution-role",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/event-planner-dev-auth-service-task-role",
  "containerDefinitions": [
    {
      "name": "auth-service",
      "image": "ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/event-planner/auth-service:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8081,
          "protocol": "tcp",
          "name": "auth-service-8081-tcp",
          "appProtocol": "http"
        }
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "dev"
        },
        {
          "name": "SERVER_PORT",
          "value": "8081"
        },
        {
          "name": "SPRING_APPLICATION_NAME",
          "value": "auth-service"
        },
        {
          "name": "DB_HOST",
          "value": "event-planner-dev-auth-db.XXXXX.us-east-1.rds.amazonaws.com"
        },
        {
          "name": "DB_PORT",
          "value": "5432"
        },
        {
          "name": "DB_NAME",
          "value": "auth"
        },
        {
          "name": "DB_USERNAME",
          "value": "postgres"
        },
        {
          "name": "REDIS_HOST",
          "value": "event-planner-dev-redis.XXXXX.cache.amazonaws.com"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        },
        {
          "name": "DOCUMENTDB_HOST",
          "value": "event-planner-dev-audit-logs.cluster-XXXXX.us-east-1.docdb.amazonaws.com"
        },
        {
          "name": "DOCUMENTDB_PORT",
          "value": "27017"
        },
        {
          "name": "DOCUMENTDB_DATABASE",
          "value": "audit_logs"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "CLOUDMAP_NAMESPACE",
          "value": "eventplanner.local"
        }
      ],
      "secrets": [
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:event-planner/dev/rds/auth-db/master-password:password::"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:event-planner/dev/jwt/signing-key:secret::"
        },
        {
          "name": "DOCUMENTDB_USERNAME",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:event-planner/dev/documentdb/master-password:username::"
        },
        {
          "name": "DOCUMENTDB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:event-planner/dev/documentdb/master-password:password::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/event-planner/auth-service",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8081/actuator/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "stopTimeout": 30,
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        }
      ]
    }
  ],
  "tags": [
    {
      "key": "Environment",
      "value": "dev"
    },
    {
      "key": "Service",
      "value": "auth-service"
    },
    {
      "key": "ManagedBy",
      "value": "Terraform"
    }
  ]
}


