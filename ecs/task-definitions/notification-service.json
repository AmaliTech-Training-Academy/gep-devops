[
  {
    "name": "notification-service",
    "image": "${image_url}:${image_tag}",
    "cpu": 0,
    "portMappings": [
      {
        "name": "notification-service",
        "containerPort": 8085,
        "hostPort": 8085,
        "protocol": "tcp",
        "appProtocol": "http"
      }
    ],
    "essential": true,
    "environment": [
      { "name": "SPRING_PROFILES_ACTIVE", "value": "${environment}" },
      { "name": "SERVER_PORT", "value": "8085" },
      { "name": "AWS_REGION", "value": "${aws_region}" },
      {
        "name": "SERVICE_DISCOVERY_NAMESPACE",
        "value": "${service_discovery_namespace}"
      },
      { "name": "REDIS_HOST", "value": "${redis_endpoint}" },
      { "name": "REDIS_PORT", "value": "6379" }
    ],
    "secrets": [],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "curl -f http://localhost:8085/actuator/health || exit 1"
      ],
      "interval": 30,
      "timeout": 5,
      "retries": 3,
      "startPeriod": 60
    }
  }
]
