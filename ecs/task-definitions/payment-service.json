{
  "family": "event-planner-payment-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "${TASK_EXECUTION_ROLE_ARN}",
  "taskRoleArn": "${TASK_ROLE_ARN}",
  "containerDefinitions": [
    {
      "name": "payment-service",
      "image": "${ECR_REPOSITORY_URL}/payment-service:${IMAGE_TAG}",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3002,
          "protocol": "tcp",
          "name": "payment-service"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "${ENVIRONMENT}"
        },
        {
          "name": "PORT",
          "value": "3002"
        },
        {
          "name": "SERVICE_NAME",
          "value": "payment-service"
        },
        {
          "name": "AWS_REGION",
          "value": "${AWS_REGION}"
        },
        {
          "name": "PAYMENT_CALLBACK_URL",
          "value": "${PAYMENT_CALLBACK_URL}"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "${DB_SECRET_ARN}:host::"
        },
        {
          "name": "DATABASE_PASSWORD",
          "valueFrom": "${DB_SECRET_ARN}:password::"
        },
        {
          "name": "DATABASE_USERNAME",
          "valueFrom": "${DB_SECRET_ARN}:username::"
        },
        {
          "name": "DATABASE_NAME",
          "valueFrom": "${DB_SECRET_ARN}:dbname::"
        },
        {
          "name": "REDIS_HOST",
          "valueFrom": "${REDIS_SECRET_ARN}:primary_endpoint::"
        },
        {
          "name": "REDIS_AUTH_TOKEN",
          "valueFrom": "${REDIS_SECRET_ARN}:auth_token::"
        },
        {
          "name": "STRIPE_SECRET_KEY",
          "valueFrom": "${PARAMETER_STORE_PREFIX}/stripe-secret-key"
        },
        {
          "name": "STRIPE_PUBLISHABLE_KEY",
          "valueFrom": "${PARAMETER_STORE_PREFIX}/stripe-publishable-key"
        },
        {
          "name": "STRIPE_WEBHOOK_SECRET",
          "valueFrom": "${PARAMETER_STORE_PREFIX}/stripe-webhook-secret"
        },
        {
          "name": "PAYPAL_CLIENT_ID",
          "valueFrom": "${PARAMETER_STORE_PREFIX}/paypal-client-id"
        },
        {
          "name": "PAYPAL_CLIENT_SECRET",
          "valueFrom": "${PARAMETER_STORE_PREFIX}/paypal-client-secret"
        },
        {
          "name": "PAYPAL_MODE",
          "valueFrom": "${PARAMETER_STORE_PREFIX}/paypal-mode"
        },
        {
          "name": "ENCRYPTION_KEY",
          "valueFrom": "${PARAMETER_STORE_PREFIX}/encryption-key"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/${PROJECT_NAME}-${ENVIRONMENT}",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "payment-service",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:3002/api/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "mountPoints": [],
      "volumesFrom": [],
      "dependsOn": [],
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        }
      ],
      "linuxParameters": {
        "initProcessEnabled": true
      },
      "stopTimeout": 120
    }
  ],
  "volumes": [],
  "tags": [
    {
      "key": "Name",
      "value": "${PROJECT_NAME}-${ENVIRONMENT}-payment-service"
    },
    {
      "key": "Environment",
      "value": "${ENVIRONMENT}"
    },
    {
      "key": "Service",
      "value": "payment-service"
    },
    {
      "key": "ManagedBy",
      "value": "Terraform"
    }
  ],
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  }
}
