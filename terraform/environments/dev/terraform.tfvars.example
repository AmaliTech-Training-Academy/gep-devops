# terraform/environments/dev/terraform.tfvars.example
# ==============================================================================
# Development Environment Configuration - EXAMPLE
# ==============================================================================
# Copy this file to terraform.tfvars and fill in your actual values
# DO NOT commit terraform.tfvars to git (it's in .gitignore)
# ==============================================================================

# Project Configuration
project_name = "event-planner"
environment  = "dev"

# Network Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["eu-west-1a", "eu-west-1b"]

# Domain Configuration
domain_name = "sankofagrid.com"

# Feature Flags
enable_flow_logs = true

# Monitoring Configuration
alert_email_addresses = [
  "devops@sankofagrid.com",
]

# JWT Configuration (Auth Service)
jwt_access_expiration  = 3600000   # 1 hour in milliseconds
jwt_refresh_expiration = 86400000  # 24 hours in milliseconds

# Tags
tags = {
  CostCenter  = "Engineering"
  Owner       = "DevOps Team"
  Terraform   = "true"
  Environment = "dev"
}

# AWS Credentials for ECS Services
# IMPORTANT: Replace with your actual AWS credentials
# These are used by ECS tasks to access AWS services (SQS, S3, etc.)
aws_access_key_id     = "YOUR_AWS_ACCESS_KEY_ID"
aws_secret_access_key = "YOUR_AWS_SECRET_ACCESS_KEY"
